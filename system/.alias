# Shortcuts

# General Commands
alias reload="source ~/.bash_profile"
alias __="sudo"
alias quit="exit
alias ciao="exit

# Navigation
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."

# List
alias ll="ls -lahAFG"

# Shortcuts
alias copy-ssh='pbcopy < ~/.ssh/id_rsa.pub'

# Process Management
alias killnode='killall -9 node'

# Kubernetes
alias kpodlogs='kubectl logs $1'
alias kpodkill='kubectl delete pod $1'
alias kpodlist='kubectl get pods'
alias kpodwatch='kubectl get pods --watch'
alias kdlist='kubectl get deployments'
alias kdkill='kubectl delete  deployment $1'
alias kapply='kubectl apply -f $1'
alias mkubeserv='minikube service $1'
